doctype html
html(lang="en")
  head
    title Sistema de cadastro com NodeJS
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")

  body
    div.p-5.bg-primary.text-white.text-center
      h1 Sistema de Cadastro com NodeJS

    nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
      div.container-fluid
        ul.navbar-nav
          li.nav-item
            a.nav-link.active(href="/") Home
          li.nav-item
            a.nav-link(href="/cadastro") Cadastrar
          li.nav-item
            a.nav-link(href="/listagem") Listagem
          li.nav-item
            a.nav-link(href="/consulta") Consultar
          li.nav-item
            a.nav-link(href="/produtos") Produto
          li.nav-item
            a.nav-link(href="/listagemdeprodutos") Listagem de Produtos
          li.nav-item
            a.nav-link(href="/consultarprodutos") Consulta de Produtos

    div.container
      div.row
        div.col-md-6
          h2 Cadastro de Usuário
          form(action="/cadastrar", method="post")
            div.form-group
              label Nome:
              input.form-control(type="text", name="nome", required)
            div.form-group
              label Email:
              input.form-control(type="email", name="email", required)
            div.form-group
              label Senha:
              input.form-control(type="password", name="senha", required)
            button.btn.btn-primary(type="submit") Cadastrar

        div.col-md-6
          h2 Lista de Usuários
          ul.list-group
            each user in users
              li.list-group-item= user.nome

      div.row
        div.col-md-6
          h2 Cadastro de Produtos
          form(action="/cadastrarproduto", method="post")
            div.form-group
              label Nome do Produto:
              input.form-control(type="text", name="produto", required)
            div.form-group
              label Preço do Produto:
              input.form-control(type="number", name="preco", required)
            button.btn.btn-primary(type="submit") Cadastrar Produto

        div.col-md-6
          h2 Lista de Produtos
          ul.list-group
            each produto in produtos
              li.list-group-item= produto.nome